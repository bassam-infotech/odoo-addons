<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="bi_order_line_report_view_graph" model="ir.ui.view">
            <field name="name">bi.purchase.order.line.view.graph</field>
            <field name="model">bi.purchase.order.line.view</field>
            <field name="arch" type="xml">
                <graph string="Order Analysis" stacked="True">
                    <field name="product_id" type="col"/>
                    <field name="product_qty"  type="row"/>
                </graph>
            </field>
        </record>

        <record id="bi_order_line_report_view_pivot" model="ir.ui.view">
            <field name="name">bi.purchase.order.line.view.pivot</field>
            <field name="model">bi.purchase.order.line.view</field>
            <field name="arch" type="xml">
                <pivot string="Order Analysis" disable_linking="True">
                    <field name="product_id" type="col"/>
                    <field name="product_qty"  type="row"/>
                </pivot>
            </field>
        </record>
        <record id="bi_order_line_report_view_tree" model="ir.ui.view">
            <field name="name">bi.purchase.order.line.view.tree</field>
            <field name="model">bi.purchase.order.line.view</field>
            <field name="arch" type="xml">
                <tree string="Order Analysis" create="false">
                    <field name="name"/>
                    <field name="date_order"/>
                     <field name="product_id"/>
                      <field name="partner_id"/>
                    <field name="product_qty"/>
                    <field name="price_unit"/>
                    <field name="price_subtotal"/>
                    <field name="qty_received"/>
                    <field name="qty_invoiced"/>

                   <field name="company_id"/> 
                    
              </tree>
            </field>
        </record>

        <record id="bi_order_line_report_view_search" model="ir.ui.view">
            <field name="name">bi.purchase.order.line.view.search</field>
            <field name="model">bi.purchase.order.line.view</field>
            <field name="arch" type="xml">
                <search string="Product Analysis">
                
                    <group expand="1" string="Group By">
                    
                        <filter string="Product" context="{'group_by':'product_id'}"/>
                        <filter string="Supplier" context="{'group_by':'partner_id'}" />
                        <filter string="Company" context="{'group_by':'company_id'}" groups="base.group_multi_company"/>
                        <filter string="Month" context="{'group_by':'date_order:month'}" name="month"/>
                        
                    </group>
                </search>
            </field>
        </record>

       <record id="bi_order_line_report_action" model="ir.actions.act_window">
           <field name="name">Order Analysis</field>
           <field name="res_model">bi.purchase.order.line.view</field>
           <field name="view_type">form</field>
           <field name="view_mode">tree,pivot,graph</field>
           <field name="context">{}</field>
           <field name="domain">[]</field>
       </record>

       <menuitem
            id="bi_order_line_report_menu"
            name="Order Line View"
            parent="purchase.purchase_report"
            action="bi_order_line_report_action"
            sequence="7"/>

 

</odoo>
