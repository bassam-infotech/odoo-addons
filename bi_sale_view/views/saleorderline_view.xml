<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="bi_saleorder_line_report_view_graph" model="ir.ui.view">
            <field name="name">bi.sale.order.line.view.graph</field>
            <field name="model">bi.sale.order.line.view</field>
            <field name="arch" type="xml">
                <graph string="Order Analysis" stacked="True">
                    <field name="product_id" type="col"/>
                    <field name="product_uom_qty" interval="month" type="row"/>
                </graph>
            </field>
        </record>

        <record id="bi_saleorder_line_report_view_pivot" model="ir.ui.view">
            <field name="name">bi.sale.order.line.view.pivot</field>
            <field name="model">bi.sale.order.line.view</field>
            <field name="arch" type="xml">
                <pivot string="Order Analysis" disable_linking="True">
                    <field name="product_id" type="col"/>
                    <field name="product_uom_qty" interval="month" type="row"/>
                </pivot>
            </field>
        </record>
        <record id="bi_saleorder_line_report_view_tree" model="ir.ui.view">
            <field name="name">bi.sale.order.line.view.tree</field>
            <field name="model">bi.sale.order.line.view</field>
            <field name="arch" type="xml">
                <tree string="Order Analysis" create="false">
                    
                    <field name="name"/>
                    <field name="date_order"/>
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <field name="product_uom_qty"/>
                    <field name="product_uom"/>
                    <field name="price_unit"/>
                    <field name="price_tax"/>
                    <field name="price_subtotal"/>
                    <field name="qty_delivered"/>
                    <field name="qty_invoiced"/>
                    <field name="company_id"/>
                   
           
                    
              </tree>
            </field>
        </record>

       <record id="bi_sale_order_line_report_action" model="ir.actions.act_window">
           <field name="name">Order Analysis</field>
           <field name="res_model">bi.sale.order.line.view</field>
           <field name="view_type">form</field>
           <field name="view_mode">tree,pivot,graph</field>
           <field name="context">{}</field>
           <field name="domain">[]</field>
       </record>

       <menuitem
            id="bi_sale_order_line_report_menu"
            name="Order Line View"
            parent="sales_team.menu_sale_report"
            action="bi_sale_order_line_report_action"
            sequence="7"/>

 

</odoo>
